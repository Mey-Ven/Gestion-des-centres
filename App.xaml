<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApplication.App">
    <!-- Ressources globales (vide pour l'instant) -->
    <Application.Resources>
        <ResourceDictionary>
            <!-- Style global pour les Entry (champs de texte) -->
            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="LightGray" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="PlaceholderColor" Value="DarkGray" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="Margin" Value="0,10" />
            </Style>


            <!-- Style global pour les Button -->
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="BackgroundColor" Value="Gray" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Margin" Value="0,20" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>


            <!-- Style global pour les Picker (sélecteurs) -->
            <Style TargetType="Picker">
                <Setter Property="BackgroundColor" Value="LightGray" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="0,10" />
            </Style>

            <!-- Style global pour StackLayout -->
            <Style TargetType="StackLayout">
                <Setter Property="Spacing" Value="15" />
                <Setter Property="Padding" Value="20" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
